    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
              <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                <h6 class="text-white text-capitalize ps-3">Cadastrar Nova Venda</h6>
              </div>
            </div>
            <div class="card-body px-0 pb-2">
              <div class="table-responsive p-0">
                <div class="card-body">
                  <%= form_with(model: @sell, local: true) do |form| %>
                    <% if @sell.errors.any? %>
                      <div id="error_explanation">
                        <h2><%= pluralize(@sell.errors.count, "error") %> prohibited this buy from being saved:</h2>
                        <ul>
                          <% @sell.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>
                  <!-- Inicio Form  -->
                    <form>
                        <div class="input-group input-group-outline my-3">
                          <label class="form-label"></label>
                          <%= form.select("product_id", @product_options, { include_blank: 'Nome do Produto' }, class:"form-control") %>
                        </div>
                        <div class="input-group input-group-outline my-3">
                          <label class="form-label"></label>
                          <%= form.select :measurement, ['unidade (un)',
                                              'metro (m)',
                                              'quilômetro (km)', 
                                              'hectômetro (hm)', 
                                              'decâmetro (dam)', 
                                              'decímetro (dm)', 
                                              'centímetro (cm)', 
                                              'milímetro (mm)',
                                              'litro (l)',
                                              'quilolitro (kl)', 
                                              'hectolitro (hl)', 
                                              'decalitro (dal)', 
                                              'decilitro (dl)', 
                                              'centilitro (cl)', 
                                              'mililitro (ml)',
                                              'tonelada (t)',
                                              'quilograma (kg)', 
                                              'hectograma (hg)', 
                                              'decagrama (dag)', 
                                              'grama (g)', 
                                              'decigrama (dg)', 
                                              'centigrama (cg)', 
                                              'miligrama (mg)',
                                              'metro cúbico (m3)',
                                              'quilômetro cúbico (km3)', 
                                              'hectômetro cúbico (hm3)', 
                                              'decâmetro cúbico (dam3)', 
                                              'decímetro cúbico (dm3)', 
                                              'centímetro cúbico (cm3)',  
                                              'milímetro cúbico (mm3)'], class:"form-control", id:"exampleFormControlSelect1" %>       
                        </div>
                        <div class="input-group input-group-outline my-3">
                          <label class="form-label"></label>
                            <%= form.select("client_id", @client_options, { include_blank: 'Selecione...' }, class:"form-control") %>
                        </div>
                        <div class="input-group input-group-outline my-3">
                          <label class="form-label"></label>
                          <%= form.text_field :quantity, class:"form-control", placeholder:"Quantidade" %>       
                        </div>
                        <div class="input-group input-group-outline my-3">
                          <label class="form-label"></label>
                          <%= form.text_field :price, class:"form-control", placeholder:"Preço" %>       
                        </div>
                        <div class="input-group input-group-outline my-3">
                          <label class="form-label"></label>
                          <%= form.text_field :description, class:"form-control", placeholder:"Descrição" %>       
                        </div>
                        <%= form.fields_for :tax do |f| %>
                          <div class="input-group input-group-outline my-3">
                            <label class="form-label"></label>
                            <%= f.text_field :shipping, class:"form-control", id:"shipping", placeholder:"Frete" %>
                          </div>
                          <div class="input-group input-group-outline my-3">
                            <label class="form-label"></label>
                            <%= f.text_field :ipi, class:"form-control", id:"ipi",placeholder:"IPI" %>
                          </div>
                          <div class="input-group input-group-outline my-3">
                            <label class="form-label"></label>
                            <%= f.text_field :icms, class:"form-control", id:"icms", placeholder:"ICMS" %>
                          </div>
                          <div class="input-group input-group-outline my-3">
                            <label class="form-label"></label>
                            <%= f.text_field :costAdd, class:"form-control", id:"coastadd", placeholder:"Custo Adicional" %>
                          </div>
                           <div class="input-group input-group-outline my-3">
                            <label class="form-label"></label>
                            <%= f.text_field :description, class: "form-control", placeholder:"Descrição do custo adicional" %>
                          </div>
                        <%end%>
                        <div class="actions">
                          <%= link_to 'Voltar', sells_path,  class:"btn btn-success pull-right" %>
                        </div>
                        <p>
                        <div class="actions">
                          <%= form.submit "Cadastrar Venda", class:"btn btn-info pull-right"%>
                        </div>
                        <div class="clearfix"></div>
                    </form>
                  <%end%>
                  <!-- Final Tabela  -->
                </div>
              </div>
            </div>
