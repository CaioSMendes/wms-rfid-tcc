                        <th>
                          Nome da categoria
                        </th>
                        <th>
                          CÃ³digo da categoria
                        </th>
                        <th>
                        <%= link_to new_category_path, class: "btn btn-primary btn-circle" do %>
                              <i class="material-icons">create_new_folder</i>
