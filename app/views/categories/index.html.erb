                          </td>
                          <td>
                            <%= category.codCategorie %>
                          </td>
                          <td class="td-actions text-right">
                              <%= link_to category_path(category), class:"btn btn-primary btn-link btn-sm" do %>
                                <i class="material-icons">search</i>
                              <%end%>
