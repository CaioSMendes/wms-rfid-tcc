    <!-- Inicio Tabela  -->
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
              <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                <h6 class="text-white text-capitalize ps-3">Cadastrar um Novo Produto</h6>
              </div>
            </div>
            <div class="card-body px-0 pb-2">
              <div class="table-responsive p-0">
                <div class="card-body">
                  <%= form_with(model: @product, local: true,  remote: true) do |form| %>
                    <% if @product.errors.any? %>
                      <div id="error_explanation">
                        <h2><%= pluralize(@product.errors.count, "error") %> prohibited this client from being saved:</h2>

                        <ul>
                          <% @product.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>
                  <!-- Inicio Form  -->
                    <form>
                        <div class="input-group input-group-outline my-3">
                          <label class="form-label"></label>
                          <%= form.text_field :name, class: "form-control", placeholder:"Nome do Produto" %>
                        </div>
                        <div class="input-group input-group-outline my-3">
                          <label class="form-label"></label>
                          <%= form.text_field :quantity, class:"form-control", placeholder:"Quantidade" %>       
                        </div>
                        <div class="input-group input-group-outline my-3">
                          <label class="form-label"></label>
                          <%= form.select :unity, ['Unidade de medida','unidade (un)',
                                              'metro (m)',
                                              'quilômetro (km)', 
                                              'hectômetro (hm)', 
                                              'decâmetro (dam)', 
                                              'decímetro (dm)', 
                                              'centímetro (cm)', 
                                              'milímetro (mm)',
                                              'litro (l)',
                                              'quilolitro (kl)', 
                                              'hectolitro (hl)', 
                                              'decalitro (dal)', 
                                              'decilitro (dl)', 
                                              'centilitro (cl)', 
                                              'mililitro (ml)',
                                              'tonelada (t)',
                                              'quilograma (kg)', 
                                              'hectograma (hg)', 
                                              'decagrama (dag)', 
                                              'grama (g)', 
                                              'decigrama (dg)', 
                                              'centigrama (cg)', 
                                              'miligrama (mg)',
                                              'metro cúbico (m3)',
                                              'quilômetro cúbico (km3)', 
                                              'hectômetro cúbico (hm3)', 
                                              'decâmetro cúbico (dam3)', 
                                              'decímetro cúbico (dm3)', 
                                              'centímetro cúbico (cm3)',  
                                              'milímetro cúbico (mm3)'], class:"form-label" %>       
                        </div>
                        <div class="input-group input-group-outline my-3">
                          <label class="form-label"></label>
                          <%= form.select("categorie_id", @categorie_options, { include_blank: 'Nome da categoria' }, class:"form-control") %>       
                        </div>
                        <div class="input-group input-group-outline my-3">
                          <label class="form-label"></label>
                          <%= form.text_field :price, class:"form-control", placeholder:"Preço" %>       
                        </div>
                        <div class="input-group input-group-outline my-3">
                          <label class="form-label"></label>
                          <%= form.text_field :description, class:"form-control", placeholder:"Descrição do produto" %>       
                        </div>
                        <div class="input-group input-group-outline my-3">
                          <label class="form-label"></label>
                          <%= form.text_field :productCode, class:"form-control", placeholder:"Código do produto" %>       
                        </div>
                        <div class="input-group input-group-outline my-3">
                          <label class="form-label"></label>
                          <%= form.text_field :gtin, class:"form-control", placeholder:"Código GTIN" %>       
                        </div>
                        <div class="input-group input-group-outline my-3">
                          <label class="form-label"></label>
                          <%= form.text_field :rfid, class:"form-control", placeholder:"Código RFID" %>       
                        </div>
                        <div class="input-group input-group-outline my-3">
                          <label class="form-label"></label>
                          <%= form.text_field :codeProvider, class:"form-control", placeholder:"Código do Fornecedor" %>       
                        </div>

                        <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                          <div class="fileinput-new thumbnail img-raised">
                              <%= image_tag("produto.png", style:"width: 360px; height: 280px"  ) %>
                          </div>
                          <div class="fileinput-preview fileinput-exists thumbnail img-raised"></div>
                          <div>
                              <span class="btn btn-raised btn-round btn-default btn-file">
                                  <span class="fileinput-new">Select image</span>
                                  <span class="fileinput-exists">Change</span>
                                  <%= form.file_field :image, multiple: false %>      
                              </span>
                              <a href="#pablo" class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput"><i class="fa fa-times"></i> Remove</a>
                          </div>
                      </div>

                        

                        <div class="actions">
                          <%= link_to 'Voltar', products_path,  class:"btn btn-success pull-right" %>
                        </div>
                        <p>
                        <div class="actions">
                          <%= form.submit "Cadastrar Produto", class:"btn btn-info pull-right"%>
                        </div>
                        <div class="clearfix"></div>
                    </form>
                  <%end%>
                  <!-- Final Tabela  -->
