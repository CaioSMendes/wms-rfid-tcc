    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
              <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                <h6 class="text-white text-capitalize ps-3">Clientes</h6>
              </div>
              <br>
              <%= link_to new_client_path, class: "btn btn-success btn-circle" do %>
                <i class="material-icons">person_add</i>
                  Novo Cliente
              <%end%>
              <%= link_to clients_path(format: :pdf), class: "btn btn-danger btn-circle" do %>
                <i class="material-icons">article</i>
                  Exportar Clientes
              <%end%>
            </div>
            <div class="card-body px-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2"> Nome do proprietário</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Nome da empresa</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">CNPJ</th>
                      <th class="text-secondary opacity-7"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <% @clients.each do |client| %>
                        <td>
                          <div class="d-flex px-2 py-1">
                            <div>
                            </div>
                            <div class="d-flex flex-column justify-content-center">
                              <h6 class="mb-0 text-sm"><%= client.clientName %></h6>
                              <p class="text-xs text-secondary mb-0"><%= client.email %></p>
                            </div>
                          </div>
                        </td>
                        <td>
                          <p class="text-xs font-weight-bold mb-0"><%= client.corporateName%></p> 
                        </td>
                        <td class="align-middle text-center">
                          <span class="text-secondary text-xs font-weight-bold"><%= client.cnpj%></span>
                        </td>
                        
                        <td class="td-actions text-right">
                          <%= link_to client_path(client), class:"btn btn-info" do %>
                            <i class="material-icons">search</i>
                          <%end%>
                        </td>
                        <td class="td-actions text-right">
                          <%= link_to edit_client_path(client), class:"btn btn-warning" do %>
                            <i class="material-icons">edit</i>
                          <%end%>
                        </td>
                          <td class="td-actions text-right">
                            <%= link_to client_path(client,format: :pdf), class:"btn btn-success" do %>
                              <i class="material-icons">article</i>
                            <%end%>
                          </td>
                          <td class="td-actions text-right">  
                            <%= link_to client, method: :delete, class:"btn btn-danger", data: { confirm: 'Are you sure?' } do %>
                              <i class="material-icons">close</i>
                            <%end%>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
