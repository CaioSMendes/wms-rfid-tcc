<section class="vh-100">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">
        <div class="px-5 ms-xl-4">
        </div>
        <div class="d-flex align-items-center">
          <form style="width: 23rem;">
            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Cadastro</h3>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-outline mb-4">
              <%= f.text_field :name, autofocus: true, class:"form-control form-control-lg" %>
              <label class="form-label" for="form2Example17">Nome</label>
            </div>
            <div class="form-outline mb-4">
              <%= f.text_field :lastname, autofocus: true, class:"form-control form-control-lg" %>
              <label class="form-label" for="form2Example17">Sobrenome</label>
            </div>
            <div class="form-outline mb-4">
              <%= f.text_field :company, autofocus: true, class:"form-control form-control-lg" %>
              <label class="form-label" for="form2Example17">Nome da empresa</label>
            </div>
            <div class="form-outline mb-4">
              <%= f.text_field :cpf, autofocus: true, class:"form-control form-control-lg" %>
              <label class="form-label" for="form2Example17">CPF</label>
            </div>
            <div class="form-outline mb-4">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"form2Example17", class:"form-control form-control-lg" %>
              <label class="form-label" for="form2Example17">Email</label>
            </div>

            <div class="field">
                <%= f.password_field :password, autocomplete: "new-password", class:"form-control form-control-lg" %>
                <label class="form-label" for="form2Example27">Senha</label>
              </div>
              <div class="field">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control form-control-lg"  %>
                <label class="form-label" for="form2Example27">Confirmar senha</label>
              </div>

            <div class="pt-1 mb-4">
              <div class="actions">
                <%= f.submit "Cadastrar",class:"btn btn-primary btn-lg btn-block" %>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
        <%= image_tag "w1.jpg", id:"container-imagem" %>
      </div>
    </div>
  </div>
</section>
<% end %>