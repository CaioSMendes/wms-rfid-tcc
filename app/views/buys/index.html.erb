    <!-- Navbar Final -->

    

    <!-- Inicio Tabela  -->
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
              <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                <h6 class="text-white text-capitalize ps-3">Compras</h6>
              </div>
              <br>
              <%= link_to new_buy_path, class: "btn btn-success btn-circle" do %>
                <i class="material-icons">local_mall</i>
                  Nova Compra
              <%end%>
              <%= link_to buys_path(format: :pdf), class: "btn btn-danger btn-circle" do %>
                <i class="material-icons">article</i>
                  Exportar Compra
              <%end%>
            </div>
            <div class="card-body px-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Nome do produto</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Quantidade</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Unidade de medida</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Preço</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Data de compra</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Valor Total</th>
                      <th class="text-secondary opacity-7"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <% @buys.each do |buy| %>
                         <td>
                          <p class="text-xs font-weight-bold mb-0"><%= buy.nameProduct%></p> 
                        </td>  
                        <td>
                          <p class="text-xs font-weight-bold mb-0"><%= buy.quantity%></p> 
                        </td>
                        <td>
                          <p class="text-xs font-weight-bold mb-0"><%= buy.measurement%></p> 
                        </td> 
                        <td>
                          <p class="text-xs font-weight-bold mb-0"><%= buy.price%></p> 
                        </td> 
                        <td>
                          <p class="text-xs font-weight-bold mb-0"><%= buy.created_at.to_date.strftime("%d/%m/%Y") %></p> 
                        </td> 
                        <td>
                          <p class="text-xs font-weight-bold mb-0">R$ <%= a = (buy.quantity)*(buy.price) %></p> 
                        </td>   
                        <td class="td-actions text-right">
                          <%= link_to buy_path(buy), class:"btn btn-info" do %>
                            <i class="material-icons">search</i>
                          <%end%>
                        </td>
                        <td class="td-actions text-right">
                          <%= link_to edit_buy_path(buy), class:"btn btn-warning" do %>
                            <i class="material-icons">edit</i>
                          <%end%>
                        </td>
                          <td class="td-actions text-right">
                            <%= link_to buy_path(buy,format: :pdf), class:"btn btn-success" do %>
                              <i class="material-icons">article</i>
                            <%end%>
                          </td>
                          <td class="td-actions text-right">  
                            <%= link_to buy, method: :delete, class:"btn btn-danger", data: { confirm: 'Are you sure?' } do %>
                              <i class="material-icons">close</i>
                            <%end%>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <%= will_paginate @buys, list_classes: %w(pagination d-flex justify-content-center) %>
      </div>
       <!-- Final Tabela  -->
  


