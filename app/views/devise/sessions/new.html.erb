<section class="vh-100">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">
        <div class="px-5 ms-xl-4">
          <%= image_tag "reduce.png", width:"300px", height:"150px" %>
        </div>
        <div class="d-flex align-items-center">
          <form style="width: 23rem;">
            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Login</h3>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-outline mb-4">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"form2Example17", class:"form-control form-control-lg" %>
              <label class="form-label" for="form2Example17">Email</label>
            </div>
            <div class="form-outline mb-4">
              <%= f.password_field :password, autocomplete: "current-password", id:"form2Example27", class:"form-control form-control-lg" %>
              <label class="form-label" for="form2Example27">Senha</label>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :lembrar_senha %>
              </div>
            <% end %>
            <div class="pt-1 mb-4">
              <div class="actions">
                <%= f.submit "Entrar",class:"btn btn-primary btn-lg btn-block" %>
              </div>
            </div>
            <p class="small mb-5 pb-lg-2"><%= link_to "Esqueceu sua senha ?", new_password_path(resource_name) %><br/></p>
            <p><b>NÃ£o tem uma conta? <a class="link-info"></b><%= link_to "Cadastrar", new_registration_path(resource_name) %><br/></a></p>
          </form>
        </div>
      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
        <%= image_tag "w2.jpg", id:"container-imagem" %>
      </div>
    </div>
  </div>
</section>
<% end %>
